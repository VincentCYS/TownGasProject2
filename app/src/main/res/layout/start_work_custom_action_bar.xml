<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="25dp">

    <Button
        android:id="@+id/btnDeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_toEndOf="@+id/textView"
        android:background="@drawable/buttonshapegrey"
        android:text="@string/btnDeleteAll"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normalFontSize" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDeleteAll"
        android:layout_alignBottom="@+id/btnDeleteAll"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin"
        android:background="@color/colorPrimary"
        android:text="@string/btnStart"
        android:textColor="@color/white"
        android:textSize="@dimen/normalFontSize"
        android:textStyle="bold" />

</RelativeLayout>